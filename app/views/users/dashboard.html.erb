<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
    <div class="card-block">
      <h4 class="card-title"><%= @user.description %></h4>
      <button type="button" class="btn btn-warning"><%= link_to "Mettre à jour mon profil", edit_user_path(@user) %></button>
    </div></br>
  </div>
  <div class="card text-center">
  <h2>Mes dernières consoles mises en location</h2>
  <% @user.consoles.each do |console| %>
    <div class="col-xs-4" style="background-color: #F0F2EF; margin-bottom: 5px; position: relative; margin-right: 2px; width: 350px">
            <h4 class="card-title"><%= console.brand %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= console.shifter %> manettes</h6>
            <p class="card-text">loué par <%= console.user.first_name %> </p>
            <button type="button" class="btn btn-primary"><%= link_to "More details", console_path(console) %></button>
              </br></br>
    </div>
    </div>
  <% end %>
</div>
