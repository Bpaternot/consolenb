<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
    <div class="card-block">
      <h4 class="card-title"><%= @user.description %></h4>
      <button type="button" class="btn btn-warning"><%= link_to "Mettre Ã  jour mon profil", edit_user_registration_path %></button>
    </div>
  </div>


  <!-- my pending bookings -->
  <div>
    <h2>My pending bookings</h2>
      <% @bookings_pending.each do |book| %>
      <div>
         <p>start day: <%= book.start_day %></p>
         <p>Duration: <%= book.duration %></p>
         <p>Console: <%= book.console.brand %></p>
         <p>Name: <%= book.console.user.first_name %></p>
      </div>
      <% end %>
  </div>

