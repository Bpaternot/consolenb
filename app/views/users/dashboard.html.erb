  <!-- Liste des consoles -->
  <div class="card">
    <h2>Toutes mes consoles</h2>
    <% @user.consoles.each do |console| %>
      <div style="background-color: #F0F2EF; margin-bottom: 5px; position: relative; margin-right: 2px; width: 350px">
        <h4 class="card-title"><%= console.brand %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= console.shifter %> manettes</h6>
        <p class="card-text"><%= console.description %> </p>
        <button type="button" class="btn btn-primary"><%= link_to "Edit",  edit_console_path(console)%></button>
         <button type="button" class="btn btn-danger"><%= link_to "Delete", console_path(console),
              method: :delete,
              data: { confirm: "Are you sure?" } %></button></br></br>
