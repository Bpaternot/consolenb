

<div class="fake-height"></div>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path('playing-sony-console-controller_k4isza.jpg', :effect=>'auto_saturation', :height=>1280, :crop=>'scale') %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <h2>Rented by <%= @console.user.first_name %> <%= @console.user.last_name %></h2>
  <p><%= @console.user.description %></p>
  <p><i class="fa fa-television" aria-hidden="true"></i> <span class="in-redpastel"><%= @console.brand %></span></p>
  <p><i class="fa fa-gamepad" aria-hidden="true"></i> <span class="in-redpastel"><%= @console.shifter %></span> controllers</p>
  <p><i class="fa fa-eur" aria-hidden="true"></i> <span class="in-redpastel"><%= @console.price_per_day %></span> per day</p>
</div>


        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <%= simple_form_for [@console, @review] do |f| %>
        <h2 class="text-center">Add a new review</h2>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


